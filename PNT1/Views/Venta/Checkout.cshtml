@model Venta

<form asp-action="Checkout" method="Post" class="form-horizontal" role="form">
    <h1 id="titulo">Completa la siguiente info!</h1>

    <div class="form-group">
        <label class="text-login" asp-for="Nombre" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="text-login" asp-for="Apellido" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Apellido" class="form-control" />
            <span asp-validation-for="Apellido" class="danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="text-login" asp-for="Direccion" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Direccion" class="form-control" />
            <span asp-validation-for="Direccion" class="danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="text-login" asp-for="Ciudad" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Ciudad" class="form-control" />
            <span asp-validation-for="Ciudad" class="danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="text-login" asp-for="CodigoPostal" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="CodigoPostal" class="form-control" />
            <span asp-validation-for="CodigoPostal" class="danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="text-login" asp-for="Telefono" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Telefono" class="form-control" />
            <span asp-validation-for="Telefono" class="danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-dark" id="button-carrito" value="Comprar" asp-controller="Venta" asp-action="Checkout" />
        </div>
    </div>

</form>