@model PNT1.Models.Item

@{
    ViewData["Title"] = "Detalle";
}

<h1 class="details-title" id="titulo">Detalle</h1>

<div>
    <h4 class="details-title">@Html.DisplayFor(model => model.Descripcion)</h4>
    <hr / >
    <dl class="row">
        <dt class="col-sm-2" id="details-attribute">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10" id="details-attribute">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2" id="details-attribute">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10" id="details-attribute">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class="col-sm-2" id="details-attribute">
            @Html.DisplayNameFor(model => model.Imagen)
        </dt>
        <dd class="col-sm-10" id="details-attribute">
            @Html.DisplayFor(model => model.Imagen)
            <img class="card-img-top" id="image-details" src="/images/music.png" />
        </dd>
    </dl>
</div>
<div class="agregarAlCarrito">
    <p class="button">
        <a class="btn btn-dark" id="button-carrito" asp-controller="Carrito" asp-action="AgregarAlCarrito" asp-route-itemId="@Model.Id">Agregar al carrito</a>
    </p>
</div>
<div>
    <a asp-action="List">Volver al catalogo</a>
</div>
